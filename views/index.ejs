<!DOCTYPE html>
<html ng-app="catalogo">
<head>
  <meta charset="UTF-8">
  <title>Bem-vindo</title>
</head>
<body ng-controller="FilmesController">
  <h1>Bem vindo ao treinamento de MEAN Stack do Alura!</h1>

  <ul ng-repeat="filme in filmes">
    <li><a href="#" ng-click="mostraFilme(filme)"> {{filme.titulo}}</a></li>
  </ul>

  <div ng-if="filmeSelecionado">
    <dl>
      <dt>TÃ­tulo</dt>
      <td>{{filmeSelecionado.titulo}}</td>
      <dt>Diretor</dt>
      <td>{{filmeSelecionado.diretor}}</td>
      <dt>Ano</dt>
      <td>{{filmeSelecionado.ano}}</td>
      <a href="#" ng-click="deletaFilme(filmeSelecionado)">
        Deletar {{filmeSelecionado.titulo}}
      </a>
      <a href="#" ng-click="editaFilme(filmeSelecionado)">
        Editar filme {{filmeSelecionado.titulo}}
      </a>
    </dl>
  </div>

  <form ng-submit="adicionaFilme()">
    Titulo: <input ng-model="filme.titulo">
    Diretor: <input ng-model="filme.diretor">
    Ano: <input ng-model="filme.ano">
    <input type="submit">
  </form>

  <script src="js/angular.js"></script>
  <script src="js/main.js"></script>
  <script src="js/FilmesController.js"></script>
</body>
</html>
